<tr>
  <td><%= link_to post.id, post_path(post) %></td>
  <td><%= post.overtime_request %></td>
  <td><%= post.date %></td>
  <td><%= post.user.full_name %></td>
  <td><%= link_to truncate(post.rationale), post_path(post) %></td>
  <td><%= status_label post.status %></td>
  <td><%= link_to '<i class="glyphicon glyphicon-pencil"></i>'.html_safe, edit_post_path(post), id: "edit_#{post.id}", class: 'btn btn-success btn-xs' if policy(post).update? %></td>
  <td><%= link_to '<i class="glyphicon glyphicon-trash"></i>'.html_safe, post_path(post), method: :delete, id: "delete_post_#{post.id}_from_index", class: 'btn btn-danger btn-xs', data: { confirm: 'Are you sure?' } if policy(post).update? %></td>
</tr>